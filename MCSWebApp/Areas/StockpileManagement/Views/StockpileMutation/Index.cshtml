                            <a class="dropdown-item" id="refreshQuality">Recalculate Quality</a>*@

                            <a class="dropdown-item " href="#" data-toggle="modal" data-target="#modal-recalculate-quantity" 
                               id="dropdown-recalculate-quantity">
                                Recalculate Quantity
                            </a>
                            <a class="dropdown-item " href="#" data-toggle="modal" data-target="#modal-recalculate-quality" 
                               id="dropdown-recalculate-quality">
