@model DashboardViewModel
@functions {
    public string FormatNumber(object value)
    {
        if (value == null)
            return "0";

        if (value is int intValue)
            return intValue.ToString("N3");

        if (value is long longValue)
            return longValue.ToString("N3");

        if (value is decimal decimalValue)
            return decimalValue.ToString("N3");

        if (value is double doubleValue)
            return doubleValue.ToString("N3");

        // If it's not a recognized numeric type, just convert to string
        return value.ToString();
    }
}
