<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    @(ViewBag.SubBreadcrumb ?? ViewBag.Breadcrumb)
                </h2>

                <div class="panel-toolbar mr-2">
                    <div class="btn-group">
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</button>
                        <div class="dropdown-menu">
                            @* <a class="dropdown-item" href="/Sales/Customer/ExcelExport">Download Template</a> *@
                            <a class="dropdown-item disabled" href="#" data-toggle="modal" data-target="#modal-download-selected"
                               id="dropdown-download-selected">
                                Download Selected<br>For Template
                            </a>
                            <a class="dropdown-item disabled" href="#" data-toggle="modal" data-target="#modal-download-payment-selected"
                               id="dropdown-download-payment-selected">
                                Download Selected<br>for Customer Payment Template
                            </a>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#modal-upload-file">Upload Data</a>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#modal-upload-payment">Upload Customer Payment</a>
                        </div>
                    </div>
                </div>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="dx-viewport">
                                <div class="demo-container">
                                    <div id="grid"></div>
                                    <div id="credit-limit-popup"></div>
                                    <input type="hidden" name="active-customer-id" />
                                    <input type="hidden" name="active-customer-name" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Upload file -->
<div class="modal fade" id="modal-upload-file" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload file</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <input type="file" id="fUpload" name="files" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnUpload">Upload</button>
            </div>
        </div>
    </div>
</div>

<!-- Upload data payment -->
<div class="modal fade" id="modal-upload-payment" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Customer Payment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <input type="file" id="fUploadPayment" name="files" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnUploadPayment">Upload</button>
            </div>
        </div>
    </div>
</div>

<!-- Download Selected Row -->
<div class="modal fade" id="modal-download-selected" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">
                    <b>Are you sure you want to download all selected rows for the template?</b>
                </h3>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <h5>The time taken to download the template depends on the selected data.</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="btnDownloadSelectedRow">Download</button>
            </div>
        </div>
    </div>
</div>
<!-- Download Selected Customer Payment -->
<div class="modal fade" id="modal-download-payment-selected" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">
                    <b>Are you sure you want to download all selected rows for the payment template?</b>
                </h3>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <h5>The time taken to download the template depends on the selected data.</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="btnDownloadSelectedPayment">Download</button>
            </div>
        </div>
    </div>
</div>
@section ScriptsBlock
{
    <script src="~/js/cdnjs/ajax/libs/polyfill.min.js"></script>
    <script src="~/js/cdnjs/ajax/libs/jszip.min.js"></script>
    <script src="~/js/cdnjs/ajax/libs/exceljs.min.js"></script>
    <script src="~/js/cdnjs/ajax/libs/FileSaver.min.js"></script>
    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>
    <script defer src="~/app/areas/sales/customer/js/index.js?_=@DateTime.Now.Ticks"></script>
}